&MODELS

 model       = 'Straka'
 h5fname     = 'straka2d.hdf5'

 box%ncells  = 32, 16
 box%extent  = 20000, 6400
 box%origin  = -10000.0, 0.0

 ![Kelvin] reference potential temperature
 straka_flow%theta_ref = 300.0

 ![Kelvin] max. pot. temp. perturbation
 straka_flow%theta_max = 15.0

 ![m] sphere center (x, z)
 straka_flow%center = 0.0, 3000.0

 ![m] ellipse radii (x, z)
 straka_flow%radii = 4000.0, 2000.0

/

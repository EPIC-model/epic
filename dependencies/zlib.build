#!/bin/bash

# recipe for:
P=zlib
V_MAJOR=1
V_MINOR=2
V=${V_MAJOR}.${V_MINOR}.11

# download
curl -L \
    --output "${DOWNLOADS_DIR}/$P-$V.tar.gz" \
    "https://zlib.net/$P-${V}.tar.gz"

# unpack
mkdir -p "${SRC_DIR}/$P" && cd "$_"
tar xvf "${DOWNLOADS_DIR}/$P-$V.tar.gz"

# configure
mkdir -p "${SRC_DIR}/$P/build" && cd "$_"
${SRC_DIR}/$P/$P-$V/configure       \
    --prefix=${PREFIX}

# compile & install
make -j ${NJOBS}
make install
